{
  "name": "notes-web",
  "version": "1.2.0",
  "description": "Notes frontend app",
  "author": "Ignacio Miranda Figueroa (N)",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": "14.17.4",
    "npm": "6.14.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IgnacioNMiranda/notes-app"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest --coverage --watch",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-notifications-component": "^3.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.4.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-notifications-component": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.2",
    "vite": "^2.4.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "../coverage",
    "coverageProvider": "v8",
    "coveragePathIgnorePatterns": [
      "^.+\\.js$"
    ],
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.(ts|tsx)$",
    "transform": {
      "^.+\\.(tsx|ts)?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/jest/file.mock.js",
      "\\.(css|less)$": "<rootDir>/mocks/jest/style.mock.js"
    }
  }
}
